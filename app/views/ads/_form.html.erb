<%= semantic_form_for @ad do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.inputs do %>
        <%= f.input :title %>
        <%= f.input :text, :as => :text %>
        <%= f.input :category %>
        <%= f.input :tags, :as => :check_boxes, :collection => Tag.all %>
    <% end %>
    <%= f.actions %>
<% end %>