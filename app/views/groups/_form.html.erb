<%= form_with(model: @group, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :name, class: 'header' %>
    <%= f.text_field :name %>
    <%= f.select :privacy, Group.privacies.keys.map { |w| [w.humanize, w] } %>

    <%= f.submit yield(:button_text) %>
<% end %>