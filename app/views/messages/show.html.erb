<<% provide(:title, "Conversation with " + @user.username) %>>

<h2><%= @user.username %></h2>

<ol id="messages">
    <%= render @messages %>
</ol>

<%= form_with(model: @message) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_area :text %>

    <%= f.hidden_field :to_id, value: @user.id %>
    <%= f.hidden_field :ad_id %>

    <%= f.submit "Send" %>
<% end %>