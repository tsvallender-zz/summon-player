<% provide(:title, "Conversation with " + @user.username) %>

<h2><%= @user.username %></h2>

<% @messages.each do |m| %>
    <ol class="messages">
        <li class="message">
            <span class="from"><%= m.from.username %>:</span>
            <span class="text"><%= m.text %></span>
            <span class="time"><%= time_ago_in_words(m.created_at) %> ago.</span>
        </li>
    </ol>
<% end %>