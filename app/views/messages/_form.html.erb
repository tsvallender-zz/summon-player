<%= form_with(model: @message, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :text, class: 'header' %>
    <%= f.text_area :text %>

    <%= f.label :to, class: 'header' %>
    <%= f.collection_select :to_id, User.all, :id, :username %>

    <%= f.submit yield(:button_text) %>
<% end %>